<%- include('partials/header') -%>
<main class="main-container">
  <div class="sign-up-container shadow-custom rounded-lg">
    <div class="row justify-content-center">
      <section class="col-6 mt-5">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => {
        %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <% } %>
        <form action="/signup" method="POST" style="width: 400px">
          <h1 class="text-3xl mb-1 mt-3" style="width: 16ch">
            Welcome to
            <div class="brand text-4xl">Metal & Ice</div>
          </h1>
          <h2 class="text-1xl mb-5">
            Create an account or <a class="login-link" href="/login">log in</a>
          </h2>
          <div class="mb-3">
            <label for="userName" class="form-label font-bold">User Name</label>
            <input
              type="text"
              placeholder="User Name"
              class="form-control input input-bordered w-full"
              id="userName"
              name="userName"
              required
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label font-bold"
              >Email address</label
            >
            <input
              type="email"
              placeholder="Email"
              class="form-control input input-bordered w-full"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              name="email"
              required
            />
            <div id="emailHelp" class="form-text"></div>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label font-bold">Password</label>
            <input
              type="password"
              placeholder="Password"
              class="form-control input input-bordered w-full"
              id="password"
              name="password"
              required
            />
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label font-bold"
              >Confirm Password</label
            >
            <input
              type="password"
              placeholder="Confirm Password"
              class="form-control input input-bordered w-full"
              id="confirmPassword"
              name="confirmPassword"
              required
            />
          </div>
          <button
            type="submit"
            class="btn btn-outline btn-xs sm:btn-sm md:btn-md w-full mb-10"
          >
            Sign Up
          </button>
        </form>
      </section>
    </div>
  </div>
</main>

<%- include('partials/footer') -%>
