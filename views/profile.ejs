<%- include('partials/header') -%>
<div class="profile-container flex flex-wrap justify-center items-center bg-stone-800	h-full">
  <div class="row mt-5 profile-form-container">
      <div class="">
          <div class="user-container flex justify-start items-center rounded-md">
              <div class="avatar">
                <div class="w-24 h-24 ml-8 mr-8 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                  <img src="https://daisyui.com/images/stock/photo-1534528741775-53994a69daeb.jpg" />
                </div>
              </div>
              <div class="user-info flex justify-between ml-10">
                <div>
                  <p class="text-2xl font-bold mb-2"><%= user.userName %></p>
                  <div class="flex justify-center items-center"> 
                    <p class=" flex items-center mb-2"> 
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                      </svg>
                      <%= user.email %></p></div>
                  </div>
                <div>
                  <a href="/logout" class="col-3 w-32 btn btn-xs sm:btn-sm btn-success shadow-lg">Logout</a>
                </div>
              </div>
          </div>
          <div class="mt-5 mb-10 cocktail-form-container rounded-md flex justify-center content-center items-center">
            <div class="flex flex-col justify-center">
              <h2 class="text-3xl mx-auto mb-5 mt-5">Add a Cocktail</h2>
              <form class="flex flex-col gap-5" action="/cocktail/createCocktail" enctype="multipart/form-data" method="POST">
            

                <label class="input input-bordered flex items-center gap-2" for="title">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 opacity-70">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                  </svg>
                  
                  <input type="text" class="grow" id="title" name="title" placeholder="Cocktail title" />
                </label>
                <label class="input input-bordered flex items-center gap-2" for="ingredients">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-4 h-4 opacity-70" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75 2.25 12l4.179 2.25m0-4.5 5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0 4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0-5.571 3-5.571-3" />
                    </svg>
                  
                    <input type="text" class="grow" placeholder="Ingredients" id="ingredients" name="ingredients" />
                </label>
                <label class="input input-bordered flex items-center gap-2" for="directions">
                 
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 opacity-70">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
                  </svg>
                  
                  <input type="text" class="grow" placeholder="Directions" id="directions" name="directions" />
                </label>
                <!-- <label class="input input-bordered flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" /></svg>
                  <input type="password" class="grow" value="password" />
                </label> -->
                <div  class="mb-3">
                  <label for="imgUpload" class="form-label">Image</label>
                  <input type="file" class="form-control" id="imageUpload" name="file">
                </div>
                <button type="submit" class="btn btn-primary w-full mb-5" value="Upload">Submit</button>
              </form>
            </div>
    </div>

      <div><h3 class="text-3xl text-white text-center">View your cocktails below</h3></div>

      <div class="mb-10">
        <ul class="row list-unstyled">
        <% for(var i=0; i<cocktail.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/cocktail/<%= cocktail[i]._id%>">
              <h2 class="text-4xl text-white mb-3 "><%= cocktail[i].title %></h2>
              <img class="img-fluid" src="<%= cocktail[i].image%>">
              <p class="text-2xl text-white ">Ingredients: <%= cocktail[i].ingredients %></p>
              <p class="text-2xl text-white ">Directions: <%= cocktail[i].directions %></p>
            </a>
          </li>
        <% } %>
        </ul>
        <!-- <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>   -->
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>