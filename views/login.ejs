<%- include('partials/header') -%>

<main class="flex items-center justify-center h-screen">
  <div class="flex flex-col md:flex-row h-screen w-screen">
    <div
      class="w-full md:w-1/2 bg-cover bg-center"
      style="background-image: url('/imgs/loginbarimage.jpg')"
    ></div>
    <div
      class="w-full md:w-1/2 p-5 flex flex-col items-center justify-center bg-custom-white"
    >
      <div
        class="form-container flex flex-col items-center justify-center h-auto w-3/4 bg-custom shadow-custom rounded-lg"
      >
        <h1 class="text-4xl  mb-4 mt-7 brand"><a href="/"> Metal & Ice</a></h1>
        <h2 class="text-3xl  mb-5">Login</h1>
        <section class="col-6 mt-5">
          <% if (locals.messages.errors) { %> <% messages.errors.forEach( el =>
          { %>
          <div role="alert" class="alert alert-warning alert-font">
            <i class="uil uil-exclamation-triangle"></i><%= el.msg %>
          </div>
          <% }) %> <% } %> <% if (locals.messages.info) { %> <%
          messages.info.forEach( el => { %>
          <div class="alert alert-info"><%= el.msg %></div>
          <% }) %> <% } %>
          <form action="/login" method="POST">
            <div class="mb-3 relative">
              <label for="exampleInputEmail1" class="form-label font-bold"
                >Email Address</label
              >
              <input
                type="email"
                placeholder="Email"
                name="email"
                class="input input-bordered w-full max-w-xs form-control pl-8"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
              />
              <i
                class="uil uil-envelope absolute left-2 top-2/3 transform -translate-y-1/2"
              ></i>
            </div>
            <div class="mb-3 relative">
              <label for="exampleInputPassword1" class="form-label font-bold"
                >Password</label
              >
              <input
                type="password"
                placeholder="Password"
                name="password"
                class="input input-bordered w-full max-w-xs form-control pl-8"
                id="exampleInputPassword1"
                aria-describedby="passwordHelp"
              />
              <i
                class="uil uil-padlock absolute left-2 top-2/3 transform -translate-y-1/2"
              ></i>
            </div>
            <div class="flex items-center justify-between pb-3">
              <div class="flex items-center px-4">
                <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                <label for="remember_me" class="ml-2 block text-sm text-gray-900">
                  Remember me
                </label>
              </div>
              <div class="text-sm px-4">
                <a href="#" class="font-medium text-indigo-600 hover:text-indigo-800">
                  Forgot your password?
                </a>
              </div>
            </div>
            <div>
            <button
              type="submit"
              class="btn btn-xs sm:btn-sm md:btn-md w-full mb-10"
            >
              Submit
            </button>
          </form>
          <div class="text-sm text-center pb-3">
            Don't have an account?
            <a
              href="/signup"
              class="font-medium text-indigo-600 hover:text-indigo-800"
            >
               Sign up here.
            </a>
          </div>
        </section>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') -%>
