<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= cocktail.title %></h2>
      <img class="img-fluid" src="<%= cocktail.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/cocktail/likeCocktail/<%= cocktail.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= cocktail.likes %></h3>
        <form
          class="col-1"
          action="/cocktail/favoriteCocktail/<%= cocktail.id %>"
          method="POST"
        >
          <button class="btn btn-primary fa fa-star" type="submit"></button>
        </form>
        <%if(cocktail.user == user.id){ %>
        <form
          action="/cocktail/deleteCocktail/<%= cocktail.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= cocktail.ingredients %></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= cocktail.directions %></p>
    </div>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
